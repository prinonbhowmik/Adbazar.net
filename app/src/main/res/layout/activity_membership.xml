                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/l2txt7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l2txt6"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto"
                            android:text="Ad Limit 50(Live)"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/l2txt8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l2txt7"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto"
                            android:text="Ad duration 90 days"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/l2txt8"
                            android:layout_marginTop="5dp"
                            android:background="#28a745"
                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#25928c">

                                <View
                                    android:id="@+id/l2view2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
