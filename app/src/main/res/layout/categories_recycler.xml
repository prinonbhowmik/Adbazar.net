<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    xmlns:tools="http://schemas.android.com/tools">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white">
       <ImageView
           android:id="@+id/imageIV"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginLeft="5dp"
           android:layout_centerVertical="true"
           tools:ignore="ContentDescription" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/categoryName"
           android:textColor="@color/black"
           android:layout_toEndOf="@+id/imageIV"
           android:layout_toStartOf="@id/ad_count"
           android:textSize="18sp"
           android:padding="10dp"
           android:maxLines="1"
           android:layout_centerVertical="true"
           android:layout_marginLeft="10dp"
           tools:ignore="SmallSp" />
        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/ad_count"
           android:textColor="#534D4D"
            android:layout_alignParentRight="true"
           android:textSize="18sp"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="5dp"
           android:maxLines="1"
            android:layout_marginRight="10dp"
           android:layout_marginBottom="5dp"
           tools:ignore="SmallSp" />

       <View
           android:id="@+id/view"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#838080"
           android:layout_below="@+id/categoryName"
           />

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/subCatRecycler"
           android:visibility="gone"
           android:layout_below="@+id/view"/>



   </RelativeLayout>


</androidx.cardview.widget.CardView>